[colors]
background = ${xrdb:background}
background-alt = ${xrdb:background}
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color15}
primary = ${xrdb:color4}
alert = ${xrdb:color1}
highlight = ${xrdb:color1}
magenta = ${xrdb:color5}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
orange = ${xrdb:color16}
red = ${xrdb:color1}
teal = ${xrdb:color14}
purple = ${xrdb:color13}
muted = ${xrdb:color8}

[bar/top]
monitor = ${env:MONITOR:}
bottom = false
width = 100%
height = 22
; wm-restack = i3
; override-redirect = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = DejaVu Sans Mono:size=10;2
font-1 = DejaVu Sans Mono:style=Bold:size=10;2
font-2 = DejaVuSansMono Nerd Font:pixelsize=10;2

modules-left = i3
modules-center = date
modules-right = cpu memory wireless-network volume avg-battery 

; tray-position    = right
; tray-padding     = 2
; tray-detached    = false
; tray-transparent = false
; tray-background  = ${colors.background}

[module/i3]
type = internal/i3

format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.purple}
label-mode-font = 2

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.teal}
label-focused-padding = 1
label-focused-font = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.muted}
label-unfocused-padding = 1
label-unfocused-font = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-foreground = ${colors.muted}
label-visible-font = 2
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1
label-urgent-font = 2

[module/wireless-network]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-foreground = ${colors.orange}
format-connected-padding = 1

label-connected = %essid%
label-connected-foreground = ${colors.foreground-alt}

ramp-signal-0 = 直
ramp-signal-1 = 直
ramp-signal-2 = 直
ramp-signal-3 = 直
ramp-signal-4 = 直
ramp-signal-5 = 直

[module/date]
type = internal/date
interval = 1.0
date = %A, %d %B %I:%M %p
format =  <label>
format-foreground = ${colors.teal}
label = %date%
label-foreground = ${colors.foreground}

[module/volume]
type = internal/pulseaudio
label-volume = %percentage%
label-muted = mute

format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.foreground-alt}

format-muted = <ramp-volume> <label-muted>
format-muted-foreground = ${colors.foreground-alt}
format-muted-padding = 1
format-volume-padding = 1

ramp-volume-foreground = ${xrdb:color6}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/avg-battery]
type = custom/script
exec = battery.sh
interval = 5.0
format-padding = 1

[module/memory]
type = internal/memory
interval = 3;
format-prefix = "RAM: "
format-prefix-foreground = ${colors.green}
format-prefix-font = 2
format-padding = 1
label = %gb_used%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU: "
format-prefix-foreground = ${colors.green}
format-prefix-font = 2
label = %percentage%%
format-padding = 1

; [module/updates-arch]
; type = custom/script
; exec = ~/.config/polybar/scripts/updates-arch.sh
; interval = 600
; format-padding = 1

; [module/notification]
; type = custom/script
