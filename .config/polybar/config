[colors]
background = ${xrdb:background}
background-alt = ${xrdb:background}
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color15}
primary = ${xrdb:color4}
secondary = #00aaff
alert = ${xrdb:color1}
battery-charging = #00aaff
battery-discharging = #ffaa00
battery-full = #00ffaa
highlight = ${xrdb:color1}
magenta = ${xrdb:color5}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
teal = ${xrdb:color14}
purple = ${xrdb:color13}
muted = ${xrdb:color8}

[bar/top]
monitor = ${env:MONITOR:}
bottom = false
width = 100%
height = 24
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = DejaVu Sans Mono:size=10;2
font-1 = DejaVu Sans Mono:style=Bold:size=10;2
font-2 = DejaVuSansMono Nerd Font:pixelsize=10;2
; font-3 = Font Awesome 5 Free:style=Solid:pixelsize=10;2
; font-4 = Font Awesome 5 Brands:pixelsize=10;2

modules-left = i3
modules-center = date
modules-right = wireless-network volume avg-battery 

; tray-position = right
; tray-padding = 2
; tray-detached = false
; tray-maxsize = 16
; tray-transparent = false
; tray-background = ${colors.background}
; tray-scale = 1.0

[module/i3]
type = internal/i3

format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.purple}
label-mode-font = 2

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.teal}
label-focused-foreground = ${colors.background}
label-focused-padding = 1
label-focused-font = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.muted}
label-unfocused-padding = 1
label-unfocused-font = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 1
label-urgent-font = 2

[module/wired-network]
type = internal/network
interface = enp2s0
interval = 3.0

label-connected = " %ifname%"
label-connected-padding = 1

[module/wireless-network]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected-foreground = ${colors.foreground-alt}
label-connected = "直 %essid%"
label-connected-padding-right = 1
label-connected-padding-left = 2

[module/date]
type = internal/date
interval = 1.0
date = %A, %d %B %I:%M %p
format =  <label>

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.foreground-alt}
label-volume = %percentage%

format-muted = " mute"
format-muted-foreground = ${colors.foreground-alt}
format-muted-padding = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

format-volume-padding = 1

[module/avg-battery]
type = custom/script
exec = battery.sh
interval = 5.0
format-padding = 1

; polybar vim syntax highlighting
; vim:filetype=dosini
